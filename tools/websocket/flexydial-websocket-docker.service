[Unit]
Description=Flexydial Websocket Container
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
#Restart=always
ExecStartPre=-/usr/bin/docker stop flexydial-websocket
ExecStartPre=-/usr/bin/docker rm flexydial-websocket
ExecStartPre=/usr/bin/docker pull vedakatta/flexydial-websocket
ExecStart=/usr/bin/docker run --rm -p --env-file /etc/default/flexydial-websocket -v /var/lib/flexydial/media:/var/lib/flexydial/media -v /etc/ssl:/etc/ssl --name flexydial-websocket vedakatta/flexydial-websocket

[Install]
WantedBy=multi-user.target
