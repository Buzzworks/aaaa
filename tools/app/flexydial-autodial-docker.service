[Unit]
Description=FlexyDial AutoDial Container
After=docker.service
Requires=docker.service

[Service]
TimeoutStartSec=0
#Restart=always
ExecStartPre=-/usr/bin/docker stop flexydial-autodial
#ExecStartPre=-/usr/bin/docker rm flexydial-autodial
ExecStartPre=/usr/bin/docker pull vedakatta/flexydial-app
ExecStart=/usr/bin/docker run --rm  --env-file /etc/default/flexy-app --name flexydial-autodial vedakatta/flexydial-app python manage.py autodial

[Install]
WantedBy=multi-user.target
